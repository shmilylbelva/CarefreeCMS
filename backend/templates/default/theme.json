{
  "name": "默认主题",
  "code": "default",
  "version": "1.0.0",
  "author": "逍遥CMS",
  "description": "逍遥CMS默认模板包，提供完整的网站功能模板",
  "screenshot": "/templates/default/screenshot.png",
  "templates": {
    "layout": {
      "name": "布局框架",
      "file": "layout.html",
      "description": "网站整体布局，包含头部、导航、侧边栏、底部"
    },
    "index": {
      "name": "首页",
      "file": "index.html",
      "description": "网站首页，展示轮播图、推荐文章、最新文章等"
    },
    "category": {
      "name": "分类页",
      "file": "category.html",
      "description": "文章分类列表页，支持分页和排序"
    },
    "article": {
      "name": "文章详情",
      "file": "article.html",
      "description": "文章详情页，展示文章内容、评论、相关推荐等"
    },
    "articles": {
      "name": "文章列表",
      "file": "articles.html",
      "description": "全部文章列表页"
    },
    "tag": {
      "name": "标签页",
      "file": "tag.html",
      "description": "标签文章列表页"
    },
    "page": {
      "name": "单页",
      "file": "page.html",
      "description": "单页内容展示，如关于我们、联系我们等"
    },
    "search": {
      "name": "搜索页",
      "file": "search.html",
      "description": "搜索结果页"
    },
    "topic": {
      "name": "专题页",
      "file": "topic.html",
      "description": "专题文章列表页"
    },
    "archive": {
      "name": "归档页",
      "file": "archive.html",
      "description": "文章归档页，按年月展示"
    },
    "404": {
      "name": "404页面",
      "file": "404.html",
      "description": "页面未找到提示页"
    },
    "sidebar": {
      "name": "侧边栏",
      "file": "sidebar.html",
      "description": "侧边栏内容，包含搜索、热门文章、分类、标签等"
    }
  },
  "config": {
    "colors": {
      "primary": "#409EFF",
      "success": "#67C23A",
      "warning": "#E6A23C",
      "danger": "#F56C6C",
      "text": "#303133",
      "link": "#409EFF"
    },
    "layout": {
      "header_height": "60px",
      "footer_height": "120px",
      "sidebar_width": "300px",
      "content_width": "1200px",
      "fixed_header": true
    },
    "typography": {
      "font_family": "Microsoft YaHei, Arial, sans-serif",
      "font_size": "14px",
      "title_font_size": "24px",
      "h1_size": "32px",
      "h2_size": "28px",
      "h3_size": "24px"
    },
    "features": {
      "show_breadcrumb": true,
      "show_sidebar": true,
      "show_tags": true,
      "enable_search": true,
      "enable_comment": true,
      "enable_share": true
    },
    "list": {
      "articles_per_page": 20,
      "show_thumbnail": true,
      "show_excerpt": true,
      "excerpt_length": 200,
      "date_format": "Y-m-d H:i:s"
    },
    "article": {
      "show_author": true,
      "show_date": true,
      "show_views": true,
      "show_category": true,
      "show_tags": true,
      "show_related": true,
      "related_count": 5
    }
  },
  "widgets": {
    "sidebar": ["search", "hot_articles", "latest_articles", "categories", "tags", "links"]
  },
  "menus": {
    "main": ["首页", "分类", "归档", "关于"]
  }
}
