# 环境配置示例文件
# 复制此文件为 .env 并修改为实际配置

# 调试模式：true=开启（开发环境），false=关闭（生产环境）
APP_DEBUG = true

[APP]
# 时区设置
DEFAULT_TIMEZONE = Asia/Shanghai

[DATABASE]
# 数据库驱动
DB_DRIVER = mysql
DB_TYPE = mysql
# 数据库主机地址
DB_HOST = 127.0.0.1
# 数据库名称
DB_NAME = cms_database
# 数据库用户名
DB_USER = root
# 数据库密码（请修改为实际密码）
DB_PASS = your_database_password
# 数据库端口
DB_PORT = 3306
# 数据库字符集
DB_CHARSET = utf8mb4
# 数据库表前缀（可选）
DB_PREFIX =

[LANG]
# 默认语言
DEFAULT_LANG = zh-cn

[JWT]
# JWT 密钥（请使用强密钥，建议32位以上随机字符串）
# 生成方法：openssl rand -base64 32
JWT_SECRET = your_jwt_secret_key_here
# JWT 过期时间（秒）7200秒 = 2小时
JWT_EXPIRE = 7200

[CORS]
# CORS 允许的来源白名单（多个用逗号分隔，留空则允许所有来源但不支持凭证）
# 生产环境示例：CORS_ALLOWED_ORIGINS = https://www.example.com,https://admin.example.com
# 开发环境示例：CORS_ALLOWED_ORIGINS = http://localhost:5173,http://localhost:3000
CORS_ALLOWED_ORIGINS = http://localhost:5173
